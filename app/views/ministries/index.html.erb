<%- model_class = Ministry -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:contact_person) %></th> 
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:display_rank) %></th> 
      <th><%= model_class.human_attribute_name(:advert_main_page) %></th> 
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @ministries.each do |ministry| %>
      <tr>
        <td><%= link_to ministry.id, ministry_path(ministry) %></td>
        <td><%= ministry.name %></td>
        <td><%= ministry.contact_person %></td>
        <td><%= ministry.description %></td>
        <td><%= ministry.display_rank %></td>
        <td><%= ministry.advert_main_page %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_ministry_path(ministry), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      ministry_path(ministry),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_ministry_path,
            :class => 'btn btn-primary' %>
