<%- model_class = Ministry -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th> 
      <th><%= model_class.human_attribute_name(:display_rank) %></th> 
      <th><%= model_class.human_attribute_name(:advert_main_page) %></th> 
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @ministries.each do |ministry| %>
      <tr>
        <td><%= ministry.name %></td> 
        <td><%= ministry.display_rank %></td>
        <td><%= status_advert_main_page(ministry)%></td>
        <td>
  	      <%= link_to t('.show', :default => t("helpers.links.view")),
                        ministry_path(ministry), :class => 'btn   btn-success btn-mini-flat' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_ministry_path(ministry), :class => 'btn btn-mini btn-mini-flat' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      ministry_path(ministry),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger btn-mini-flat' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.setup new ministry")),
            new_ministry_path,
            :class => 'btn btn-primary  btn-flat' %>
