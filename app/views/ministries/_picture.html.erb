<div class="row">
 <div class="span4">
   

<% if @ministry.ministry_pictures.present? %>
<% for ministry_picture in @ministry.ministry_pictures %>
<% if ministry_picture.image_processed? %>
    <%= image_tag(ministry_picture.ministry_image_url(:thumb), :class =>"img-rounded" ) %>
  <% else %>
    <em>Processing...</em>
  <% end %>

	 <%= link_to t('.destroy', :default => t("helpers.links.Remove Picture")),
              ministry_picture_path(ministry_picture),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger btn-flat' %>
<% end %>

<% else %>
 <%= link_to t('.picture', :default => t("helpers.links.Add a Picture")),
               ministry_pictures_step_1_path(:ministry_id => @ministry), :class => 'btn btn-flat btn-success'  %>

<% end %>
</div>
</div>