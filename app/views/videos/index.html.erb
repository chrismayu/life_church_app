<%- model_class = Video -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:contact_person) %></th>
      <th><%= model_class.human_attribute_name(:contact) %></th>
      <th><%= model_class.human_attribute_name(:_email) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:display_rank) %></th>
      <th><%= model_class.human_attribute_name(:ta1) %></th>
      <th><%= model_class.human_attribute_name(:ta2) %></th>
      <th><%= model_class.human_attribute_name(:ta3) %></th>
      <th><%= model_class.human_attribute_name(:ta4) %></th>
      <th><%= model_class.human_attribute_name(:ta5) %></th>
      <th><%= model_class.human_attribute_name(:advert_main_page) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:url) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @videos.each do |video| %>
      <tr>
        <td><%= link_to video.id, video_path(video) %></td>
        <td><%= video.name %></td>
        <td><%= video.contact_person %></td>
        <td><%= video.contact %></td>
        <td><%= video._email %></td>
        <td><%= video.description %></td>
        <td><%= video.display_rank %></td>
        <td><%= video.ta1 %></td>
        <td><%= video.ta2 %></td>
        <td><%= video.ta3 %></td>
        <td><%= video.ta4 %></td>
        <td><%= video.ta5 %></td>
        <td><%= video.advert_main_page %></td>
        <td><%= video.title %></td>
        <td><%= video.url %></td>
        <td><%=l video.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_video_path(video), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      video_path(video),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_video_path,
            :class => 'btn btn-primary' %>
