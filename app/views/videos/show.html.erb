<%- model_class = Video -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @video.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:contact_person) %>:</strong></dt>
  <dd><%= @video.contact_person %></dd>
  <dt><strong><%= model_class.human_attribute_name(:contact) %>:</strong></dt>
  <dd><%= @video.contact %></dd>
  <dt><strong><%= model_class.human_attribute_name(:_email) %>:</strong></dt>
  <dd><%= @video._email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @video.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:display_rank) %>:</strong></dt>
  <dd><%= @video.display_rank %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ta1) %>:</strong></dt>
  <dd><%= @video.ta1 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ta2) %>:</strong></dt>
  <dd><%= @video.ta2 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ta3) %>:</strong></dt>
  <dd><%= @video.ta3 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ta4) %>:</strong></dt>
  <dd><%= @video.ta4 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ta5) %>:</strong></dt>
  <dd><%= @video.ta5 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:advert_main_page) %>:</strong></dt>
  <dd><%= @video.advert_main_page %></dd>
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @video.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:url) %>:</strong></dt>
  <dd><%= @video.url %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              videos_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_video_path(@video), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              video_path(@video),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
