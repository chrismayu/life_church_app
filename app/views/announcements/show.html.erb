<%- model_class = Announcement -%>







 <% provide(:title, "Preview" ) %>
<div class="Row">
	<div class="span10 mission_bg img-rounded ">


<div class="mission_bg img-rounded ">

<table width="100%" class="table_zero"> 
 <td style="width:5px; padding: 0 50px; white-space: nowrap;"><span class="main_text">Preview</span> </td>
  <td><hr class="round_line_hoz" /></td>
</table>

<div class="span9">
 
 


 
	  <div class="alert alert-<%= @announcement.colours %>">
	  <%= div_for @announcement do %>
	    <%= @announcement.message %>  
	  <% end %>
	   </div>
	    </div>

	<dl class="dl-horizontal">
  
	  <dt><strong><%= model_class.human_attribute_name(:starts_at) %>:</strong></dt>
	  <dd><%= @announcement.starts_at %></dd>
	  <dt><strong><%= model_class.human_attribute_name(:ends_at) %>:</strong></dt>
	  <dd><%= @announcement.ends_at %></dd>
	</dl>



	<div class="pull-center" >
	  <%= link_to t('.back', :default => t("helpers.links.back")),
	              announcements_path, :class => 'btn btn-flat'  %>
	  <%= link_to t('.edit', :default => t("helpers.links.edit")),
	              edit_announcement_path(@announcement), :class => 'btn btn-flat' %>
	  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
	              announcement_path(@announcement),
	              :method => 'delete',
	              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
	              :class => 'btn btn-danger btn-flat' %>
				  <br>
				  <br>
	</div>
 
	
	
	
	
	
	
</div>
</div>  

	
	
<div class="span1">
  <%= render :partial => 'abouts/side_buttons'%>
      
</div>
</div>  

	

