<%- model_class = ServiceTime -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Service Name:</th>
      <th>Occurs Every:</th>
      <th>Starts At:</th>
     
    
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @service_times.each do |service_time| %>
      <tr>
	     <td><%= service_time.service_name %></td>
        <td><%= service_time.day %></td>
        <td><%= service_time.start_time.strftime("%l:%M %p")  %></td>
  
      
   
        <td>
	      <%= link_to t('.show', :default => t("helpers.links.view")),
                      service_time_path(service_time), :class => 'btn   btn-success btn-flat ' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_service_time_path(service_time), :class => 'btn btn-mini btn-flat' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      service_time_path(service_time),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger btn-flat' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_service_time_path,
            :class => 'btn btn-primary btn-flat' %>
