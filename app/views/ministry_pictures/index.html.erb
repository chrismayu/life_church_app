<%- model_class = MinistryPicture -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:ministry_image) %></th>
      <th><%= model_class.human_attribute_name(:image_processed) %></th>
      <th><%= model_class.human_attribute_name(:ministries_id) %></th>
      <th><%= model_class.human_attribute_name(:ministry_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @ministry_pictures.each do |ministry_picture| %>
      <tr>
        <td><%= link_to ministry_picture.id, ministry_picture_path(ministry_picture) %></td>
        <td><%= ministry_picture.ministry_image %></td>
        <td><%= ministry_picture.image_processed %></td>
        <td><%= ministry_picture.ministries_id %></td>
        <td><%= ministry_picture.ministry_id %></td>
        <td><%=l ministry_picture.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_ministry_picture_path(ministry_picture), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      ministry_picture_path(ministry_picture),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_ministry_picture_path,
            :class => 'btn btn-primary' %>
