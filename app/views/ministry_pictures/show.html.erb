<%- model_class = MinistryPicture -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:ministry_image) %>:</strong></dt>
  <dd><%= @ministry_picture.ministry_image %></dd>
  <dt><strong><%= model_class.human_attribute_name(:image_processed) %>:</strong></dt>
  <dd><%= @ministry_picture.image_processed %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ministries_id) %>:</strong></dt>
  <dd><%= @ministry_picture.ministries_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ministry_id) %>:</strong></dt>
  <dd><%= @ministry_picture.ministry_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              ministry_pictures_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_ministry_picture_path(@ministry_picture), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              ministry_picture_path(@ministry_picture),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
