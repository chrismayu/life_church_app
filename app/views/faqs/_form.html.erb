<%= simple_form_for @faq  , :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :title %>
  <%= f.input :user_id %>
  <%= f.input :admin %>
  <%= f.input :member_only %>
  <%= f.input :answer %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                faqs_path, :class => 'btn' %>
  </div>
<% end %>

 