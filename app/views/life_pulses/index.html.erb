<%- model_class = LifePulse -%>
<div class="page-header">
 
  <%= image_tag "pulse_page_header.jpeg" %>
  
</div>
<table class="table table-striped">
  
  <tbody>
    <% @life_pulses.each do |life_pulse| %>
      <tr>
        <td><%= link_to life_pulse.id, life_pulse_path(life_pulse) %></td>
 
        <td>
		 
			
		  <%= stamp_life_pulse_picture(life_pulse) %>
		
	</td>
 
 
        <td><%= life_pulse.title %></td>
        <td><%= life_pulse.summary %></td>
        
        <td><%=l life_pulse.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_life_pulse_path(life_pulse), :class => 'btn btn-mini btn-mini-flat' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      life_pulse_path(life_pulse),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger btn-mini-flat' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


 <%= will_paginate @life_pulses %>
 
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_life_pulse_path,
            :class => 'btn btn-primary btn-flat' %>
