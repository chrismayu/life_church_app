<%- model_class = LifePulse -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:keywords) %></th>
      <th><%= model_class.human_attribute_name(:from_pastor_desk) %></th>
      <th><%= model_class.human_attribute_name(:template_selected) %></th>
      <th><%= model_class.human_attribute_name(:content) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:summary) %></th>
      <th><%= model_class.human_attribute_name(:flickr_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @life_pulses.each do |life_pulse| %>
      <tr>
        <td><%= link_to life_pulse.id, life_pulse_path(life_pulse) %></td>
        <td><%= life_pulse.keywords %></td>
        <td><%= life_pulse.from_pastor_desk %></td>
        <td><%= life_pulse.template_selected %></td>
        <td><%= life_pulse.content %></td>
        <td><%= life_pulse.title %></td>
        <td><%= life_pulse.summary %></td>
        <td><%= life_pulse.flickr_id %></td>
        <td><%=l life_pulse.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_life_pulse_path(life_pulse), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      life_pulse_path(life_pulse),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_life_pulse_path,
            :class => 'btn btn-primary' %>
