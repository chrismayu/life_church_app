<%- model_class = LifePulse -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  
  <tbody>
    <% @life_pulses.each do |life_pulse| %>
      <tr>
        <td><%= link_to life_pulse.id, life_pulse_path(life_pulse) %></td>
 
        <td>
		 
			
		  <%= stamp_life_pulse_picture(life_pulse) %>
		
	</td>
 
 
        <td><%= life_pulse.title %></td>
        <td><%= life_pulse.summary %></td>
        
        <td><%=l life_pulse.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_life_pulse_path(life_pulse), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      life_pulse_path(life_pulse),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_life_pulse_path,
            :class => 'btn btn-primary' %>
