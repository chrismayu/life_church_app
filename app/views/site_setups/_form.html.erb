<%= simple_form_for @site_setup, :html => { :class => 'form-horizontal' } do |f| %>
 
  
  <%= f.input :youtube, :label=>'Youtube:',  :placeholder=>"Youtube"  %>
<%= f.input :facebook, :label=>'Facebook:',  :placeholder=>"Facebook Link"  %>
<%= f.input :video_stream , :label=>'Link Video Stream  :',  :placeholder=>"Video Stream "  %>
<%= f.input :twitter, :label=>'Twitter:',  :placeholder=>"Twitter"  %>
<%= f.input :life_pulse, :label=>'Enable Life Pulse:' %>
<%= f.input :leaders_blog, :label=>'Enable Leaders Blog:' %>
<%= f.input :store, :label=>'Enable Online Store:' %>
<%= f.input :video, :label=>'Enable Video:' %>
<%= f.input :articles, :label=>'Enable Articles:' %>
  
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                site_setups_path, :class => 'btn' %>
  </div>
<% end %>
