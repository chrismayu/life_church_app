<%= simple_form_for @program, :html => { :class => 'form-horizontal' } do |f| %>
 
  <%= f.input :contact_person,  :label=>"Contact Person:",     :placeholder=>"Contact Person" ,  :input_html => { :class => "enroll_input span3"}  %>
  <%= f.input :contact_email,  :label=>"Contact Email:",  :hint => "Will not be display on the site - Linked to only",   :placeholder=>"Email Address" ,  :input_html => { :class => "enroll_input span3"} %>
  
   <%= render :partial => 'abouts/markdown'%>
 
  <%= f.input :description ,  :label=>"Paragraph #1:", :placeholder=>"Besure to use Markdown tags where needed " ,  :input_html => { :class => "enroll_input span7", :rows => 8}   %>
 
 
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                program_path(@program), :class => 'btn' %>
  </div>
<% end %>
