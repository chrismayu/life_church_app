<%= simple_form_for @staff_rank, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :ranking %>
  <%= f.input :category %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                staff_ranks_path, :class => 'btn' %>
  </div>
<% end %>
