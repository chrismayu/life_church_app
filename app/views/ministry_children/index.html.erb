<%- model_class = MinistryChild -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:contact_person) %></th>
      <th><%= model_class.human_attribute_name(:contact_email) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:display_rank) %></th>
      <th><%= model_class.human_attribute_name(:ta1) %></th>
      <th><%= model_class.human_attribute_name(:ta2) %></th>
      <th><%= model_class.human_attribute_name(:ta3) %></th>
      <th><%= model_class.human_attribute_name(:ta4) %></th>
      <th><%= model_class.human_attribute_name(:ta5) %></th>
      <th><%= model_class.human_attribute_name(:advert_main_page) %></th>
      <th><%= model_class.human_attribute_name(:ministry_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @ministry_children.each do |ministry_child| %>
      <tr>
        <td><%= link_to ministry_child.id, ministry_child_path(ministry_child) %></td>
        <td><%= ministry_child.name %></td>
        <td><%= ministry_child.contact_person %></td>
        <td><%= ministry_child.contact_email %></td>
        <td><%= ministry_child.description %></td>
        <td><%= ministry_child.display_rank %></td>
        <td><%= ministry_child.ta1 %></td>
        <td><%= ministry_child.ta2 %></td>
        <td><%= ministry_child.ta3 %></td>
        <td><%= ministry_child.ta4 %></td>
        <td><%= ministry_child.ta5 %></td>
        <td><%= ministry_child.advert_main_page %></td>
        <td><%= ministry_child.ministry_id %></td>
        <td><%=l ministry_child.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_ministry_child_path(ministry_child), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      ministry_child_path(ministry_child),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_ministry_child_path,
            :class => 'btn btn-primary' %>
