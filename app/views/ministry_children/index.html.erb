<%- model_class = MinistryChild -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr> 
      <th><%= model_class.human_attribute_name(:name) %></th>
   
      <th><%= model_class.human_attribute_name(:display_rank) %></th>
   
      <th><%= model_class.human_attribute_name(:advert_main_page) %></th>
      <th><%= model_class.human_attribute_name(:ministry_id) %></th>
 
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @ministry_children.each do |ministry_child| %>
      <tr>
       
        <td><%= ministry_child.name %></td>
        <td><%= ministry_child.display_rank %></td>
   
        <td><%= ministry_child.advert_main_page %></td>
        <td><%= ministry_child.ministry_id %></td>
        <td>
		    <%= link_to t('.show', :default => t("helpers.links.view")),
		                ministry_child_path(ministry_child), :class => 'btn btn-success btn-mini-flat'  %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_ministry_child_path(ministry_child), :class => 'btn btn-mini btn-mini-flat' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      ministry_child_path(ministry_child),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger btn-mini-flat' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_ministry_child_path,
            :class => 'btn btn-primary' %>
