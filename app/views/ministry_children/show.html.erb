<%- model_class = MinistryChild -%>
<div class="page-header">
  <h1><%= @ministry.name %> - <%= @ministry_child.name %></h1>
</div>

 

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @ministry_child.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:contact_person) %>:</strong></dt>
  <dd><%= @ministry_child.contact_person %></dd>
  <dt><strong><%= model_class.human_attribute_name(:contact_email) %>:</strong></dt>
  <dd><%= @ministry_child.contact_email %></dd>
 
  <% unless @ministry_child.description.blank? %>
 <dt><strong>Description:</strong></dt>
  <dd><%= @ministry_child.description  %></dd>
  <%end%>
  <dt><strong><%= model_class.human_attribute_name(:display_rank) %>:</strong></dt>
  <dd><%= @ministry_child.display_rank %></dd>
  <% unless @ministry_child.ta1.blank? %>
 <dt><strong>TextArea #1:</strong></dt>
  <dd><%= @ministry_child.ta1  %></dd>
  <%end%>
  <% unless @ministry_child.ta2.blank? %>
 <dt><strong>TextArea #2:</strong></dt>
  <dd><%= @ministry_child.ta2 %></dd>
  <%end%> 
  <% unless @ministry_child.ta3.blank? %>
 <dt><strong>TextArea #3:</strong></dt>
  <dd><%= @ministry_child.ta3  %></dd>
  <%end%> 
  <% unless @ministry_child.ta4.blank? %>
 <dt><strong>TextArea #4:</strong></dt>
  <dd><%= @ministry_child.ta4  %></dd>
  <%end%> 
  <% unless @ministry_child.ta5.blank? %>
 <dt><strong>TextArea #5:</strong></dt>
  <dd><%= @ministry_child.ta5  %></dd>
  <%end%> 
  <dt><strong>Advertising - MainPage:</strong></dt>
  <dd><%= @ministry_child.advert_main_page %></dd>
 
</dl>
</div>
<div class="form-actions">
<p><h5>Picture:</h5></p>
<%= render :partial => 'picture' %>


</div>
<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              ministry_path(@ministry_child.ministry_id), :class => 'btn btn-info btn-flat'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_ministry_child_path(@ministry_child), :class => 'btn btn-flat' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              ministry_child_path(@ministry_child),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger btn-flat' %>
</div>
