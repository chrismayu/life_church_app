<%- model_class = ChurchStaffPicture -%>
<div class="page-header">
  <h1>Manage Staff Picture</h1>
</div>
 
<%= link_to t('.step_1', :default => t("helpers.links.Upload Picture & Setup New Staff Image")),
              church_staff_pictures_step_1_path ,
              :class => 'btn btn-primary btn-flat pull-left' %>

			<%= link_to t('.new', :default => t("helpers.links.Return to Staff List")),
			            church_staffs_path,
			            :class => 'btn btn-primary btn-flat pull-right' %>
<table class="table table-striped">
  <thead>
    <tr>
     
      <th>Name</th>
     
      <th>Picture</th> 
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @church_staff_pictures.each do |church_staff_picture| %>
      <tr>
         


        <td> 
	
	 		  <% if church_staff_picture.church_staff != nil %>
	
			    <%= church_staff_picture.church_staff.full_name %>

			  <% else %>
			    <em>Not setup to Staff</em>
			  <% end %>
 
	
	</td>
         
         <td>
          <% if church_staff_picture.image_processed? %>
		    <%= image_tag(church_staff_picture.staff_image_url(:stamp), :class =>"img-rounded" ) %>

		  <% else %>
		    <em>Processing...</em>
		  <% end %>
         </td>
 
        <td>
      
          <%= link_to t('.destroy', :default => t("helpers.links.remove")),
                      church_staff_picture_path(church_staff_picture),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

 