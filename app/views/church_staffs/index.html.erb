<%- model_class = ChurchStaff -%>
<div class="page-header">
  <h1>Church Staff</h1>
</div>
<%= link_to t('.new', :default => t("helpers.links.Setup New Staff")),
            new_church_staff_path,
            :class => 'btn btn-primary btn-flat' %>
<table class="table table-striped">
  <thead>
    <tr>
   
      <th><%= model_class.human_attribute_name(:first_name) %></th>
      <th><%= model_class.human_attribute_name(:last_name) %></th>
 
      <th><%= model_class.human_attribute_name(:title) %></th>
 
      <th>Category:</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @church_staffs.each do |church_staff| %>
      <tr>
    
        <td><%= church_staff.first_name %></td>
        <td><%= church_staff.last_name %></td>
      
        <td><%= church_staff.title %></td>
 		 <td><% for staff_ranks in church_staff.staff_ranks %>
	      <%=  staff_ranks.category %> 
	     <% end%></td>
        <td>
	      <%= link_to t('.show', :default => t("helpers.links.view")),
                      church_staff_path(church_staff), :class => 'btn   btn-success btn-flat ' %>
 
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_church_staff_path(church_staff), :class => 'btn btn-mini btn-flat' %>
 
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      church_staff_path(church_staff),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger btn-flat' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


