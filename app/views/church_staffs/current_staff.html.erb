  <h3> Life Church Staff </h3> 
<div class="span8"  id="main">
<table class="table table-striped">
 
  <tbody> 

<% @church_staffs.each.with_index do |church_staff, index| %>
 <tr>
      <td>
 
<% for church_staff_picture in church_staff.church_staff_pictures %>
<div class="row-fluid offsetHalf1"  id="main">
 
 <% if index.even? %> 
<div class="span2"  >
  <% if church_staff_picture.image_processed? %>
    <%= image_tag(church_staff_picture.staff_image_url(:main), :class =>"img-rounded" ) %>
 
  <% else %>
     <img src="http://thetransformedmale.files.wordpress.com/2011/06/bruce-wayne-armani.jpg"  alt="" class="img-rounded">
  <% end %>  
 
</div>
<% end%>


<div class="span4">
  <blockquote>
    <p><strong> <%= church_staff.first_name %> <%= church_staff.last_name %> </strong></p>  
         <%= church_staff.title %> <br>
    <small><cite title="Source Title"><%= church_staff.birth_location %>  <i class="icon-map-marker"></i></cite></small>
  </blockquote>
  <p>
    <i class="icon-envelope"></i> <%= link_to t('.new', :default => t("helpers.links.Contact")),
                      contact_staff_path(:staff => church_staff.email_id), :class => 'btn   btn-success btn-mini-flat' %><br>
    <i class="icon-globe"></i> <%= church_staff.url %>  <br>
    <i class="icon-gift"></i> <%= church_staff.birthday %> <br>
        <i class="icon-smile"></i> <%= church_staff.spouse_first_name %> <br>
     
	    <i class="icon-facebook"></i> <%= church_staff.facebook %> <br>
 
	   <i class="icon-linkedin"></i>  <%= church_staff.linked_in %>  <br>
 
	   <i class="icon-google-plus"></i>  <%= church_staff.google_plus %> <br>
 
     
 
	   <i class="icon-twitter"></i>  <%= church_staff.twitter %> <br>

         <%= church_staff.description %> <br>

        <% if church_staff.started_service? %>
        <%= time_ago_in_words(church_staff.started_service.to_formatted_s(:long) ) %> <br>    
        <% end %>  
  </p>
</div>


 <% if index.odd? %>
<div class="span2"  >
	<% if church_staff_picture.image_processed? %>
	    <%= image_tag(church_staff_picture.staff_image, :class =>"img-rounded" )%>
	  <% else %>
	    <em>Processing...</em>
	  <% end %>  

</div>
<% end%>
	 	<br>
	<br>
	<br><br>
<br>
<br><br>
<br>
<br>
	
		 
</div>
  
</td>
</tr>
<% end%>

<% end %>



  </tbody>
</table>
	</div>	