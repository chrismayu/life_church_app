<%- model_class = EventPicture -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @event_picture.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:event_image) %>:</strong></dt>
  <dd><%= @event_picture.event_image %></dd>
  <dt><strong><%= model_class.human_attribute_name(:linked_event) %>:</strong></dt>
  <dd><%= @event_picture.linked_event %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @event_picture.description %></dd>
<dt><strong>Event Id:</strong></dt>
  <dd><%= @event_picture.event_id%></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              event_pictures_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_event_picture_path(@event_picture), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              event_picture_path(@event_picture),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
