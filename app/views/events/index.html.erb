<%- model_class = Event -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<%= link_to t('.new', :default => t("helpers.links.Create Event")),
            new_event_path,
            :class => 'btn btn-primary btn-flat' %>
<table class="table table-striped">
  <thead>
    <tr>
 
      <th>Name:</th>
      <th>Date:</th>
      <th>Start Time:</th>
 
      <th>Remove On:</th>
    <th>Image</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <tr>
       
        <td><%= event.event_name %></td>
        <td><%= event.event_date %></td>
        <td><%= event.event_start_time.strftime("%l:%M %p") %></td>
 
        <td><%= event.remove_event_date %></td>
        <td>
			<% if event.event_pictures.present? %>
			<% for event_picture in event.event_pictures %>
			<% if event_picture.image_processed? %>
			    <%= image_tag(event_picture.event_image_url(:stamp), :class =>"img-rounded" ) %>
			  <% else %>
			    <em>Processing...</em>
			  <% end %>
 
			<% end %>

		 
			<% end %>
	</td>
        <td>
			     <%= link_to t('.show', :default => t("helpers.links.view")),
		                      event_path(event), :class => 'btn   btn-success btn-flat ' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_event_path(event), :class => 'btn btn-mini btn-flat' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      event_path(event),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger btn-flat' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


