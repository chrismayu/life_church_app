<%= simple_form_for @sermon_picture, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :sermon_image %>
  <%= f.input :image_processed %>
  <%= f.input :sermons_id %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                sermon_pictures_path, :class => 'btn' %>
  </div>
<% end %>
