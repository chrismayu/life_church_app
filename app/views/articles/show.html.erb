<%- model_class = Article -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @article.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:contact_person) %>:</strong></dt>
  <dd><%= @article.contact_person %></dd>
  <dt><strong><%= model_class.human_attribute_name(:contact) %>:</strong></dt>
  <dd><%= @article.contact %></dd>
  <dt><strong><%= model_class.human_attribute_name(:_email) %>:</strong></dt>
  <dd><%= @article._email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @article.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:display_rank) %>:</strong></dt>
  <dd><%= @article.display_rank %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ta1) %>:</strong></dt>
  <dd><%= @article.ta1 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ta2) %>:</strong></dt>
  <dd><%= @article.ta2 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ta3) %>:</strong></dt>
  <dd><%= @article.ta3 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ta4) %>:</strong></dt>
  <dd><%= @article.ta4 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ta5) %>:</strong></dt>
  <dd><%= @article.ta5 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:advert_main_page) %>:</strong></dt>
  <dd><%= @article.advert_main_page %></dd>
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @article.title %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              articles_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_article_path(@article), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              article_path(@article),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
