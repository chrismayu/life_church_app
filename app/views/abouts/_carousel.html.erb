
	<div id="myCarousel" class="carousel slide">
		<ol class="carousel-indicators">
			<li data-target="#myCarousel" data-slide-to="0" class="active"></li>
			<li data-target="#myCarousel" data-slide-to="1"></li>
			<li data-target="#myCarousel" data-slide-to="2"></li>
			<li data-target="#myCarousel" data-slide-to="3"></li>
		</ol>
		<div class="carousel-inner">
		 
		 <% @events.each.with_index  do |event, index| %>
		   
				<% if index == 0 %> 
	 	<div class="item active">
	 
			 <% else %>
			    	<div class="item">
			  <% end %>
		
		
		 
						<% if event.event_pictures.present? %>
						<% for event_picture in event.event_pictures %>
						<% if event_picture.image_processed? %>
						    <%= image_tag(event_picture.event_image_url(:main), :class =>"img-rounded" , :width => 650, :height => 300 ) %>
						  <% else %>
						    <em>Processing...</em>
						  <% end %>

						<% end %>


						<% end %>
						<div class="container">
					<div class="carousel-caption">
						<h4><%= event.event_name %></h4>
						<p><%= event.event_date %> at <%= event.event_start_time.strftime("%l:%M %p") %></p>
					 
			              <a class="btn btn-large btn-primary" href="#">Learn more</a>
					 </div>
					</div>
				</div>
		 
			
			    <% end %>
			
			
			
		</div>
		
	 
		
		
		
		<a class="left carousel-control" href="#myCarousel" data-slide="prev">‹</a>
		<a class="right carousel-control" href="#myCarousel" data-slide="next">›</a>

