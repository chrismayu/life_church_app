<%- model_class = About -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:service_day_1) %></th>
      <th><%= model_class.human_attribute_name(:service_time_1) %></th>
      <th><%= model_class.human_attribute_name(:service_day_2) %></th>
      <th><%= model_class.human_attribute_name(:service_time_2) %></th>
      <th><%= model_class.human_attribute_name(:service_day_3) %></th>
      <th><%= model_class.human_attribute_name(:service_time_3) %></th>
      <th><%= model_class.human_attribute_name(:address) %></th>
      <th><%= model_class.human_attribute_name(:city) %></th>
      <th><%= model_class.human_attribute_name(:postal_code) %></th>
      <th><%= model_class.human_attribute_name(:phone_number) %></th>
      <th><%= model_class.human_attribute_name(:toll_free_phone_number) %></th>
      <th><%= model_class.human_attribute_name(:fax_number) %></th>
      <th><%= model_class.human_attribute_name(:latitude) %></th>
      <th><%= model_class.human_attribute_name(:longitude) %></th>
      <th><%= model_class.human_attribute_name(:gmaps) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @abouts.each do |about| %>
      <tr>
        <td><%= link_to about.id, about_path(about) %></td>
        <td><%= about.service_day_1 %></td>
        <td><%= about.service_time_1 %></td>
        <td><%= about.service_day_2 %></td>
        <td><%= about.service_time_2 %></td>
        <td><%= about.service_day_3 %></td>
        <td><%= about.service_time_3 %></td>
        <td><%= about.address %></td>
        <td><%= about.city %></td>
        <td><%= about.postal_code %></td>
        <td><%= about.phone_number %></td>
        <td><%= about.toll_free_phone_number %></td>
        <td><%= about.fax_number %></td>
        <td><%= about.latitude %></td>
        <td><%= about.longitude %></td>
        <td><%= about.gmaps %></td>
        <td><%=l about.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_about_path(about), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      about_path(about),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_about_path,
            :class => 'btn btn-primary' %>
