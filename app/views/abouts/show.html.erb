<%- model_class = About -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>
 


<div class="map_container"> 
  <div id="map" class="gmaps4rails_map">
  	<%= gmaps4rails(@json) %>
	
  </div> 
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:service_day_1) %>:</strong></dt>
  <dd><%= @about.service_day_1 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:service_time_1) %>:</strong></dt>
  <dd><%= @about.service_time_1 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:service_day_2) %>:</strong></dt>
  <dd><%= @about.service_day_2 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:service_time_2) %>:</strong></dt>
  <dd><%= @about.service_time_2 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:service_day_3) %>:</strong></dt>
  <dd><%= @about.service_day_3 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:service_time_3) %>:</strong></dt>
  <dd><%= @about.service_time_3 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address) %>:</strong></dt>
  <dd><%= @about.address %></dd>
  <dt><strong><%= model_class.human_attribute_name(:city) %>:</strong></dt>
  <dd><%= @about.city %></dd>
  <dt><strong><%= model_class.human_attribute_name(:postal_code) %>:</strong></dt>
  <dd><%= @about.postal_code %></dd>
  <dt><strong><%= model_class.human_attribute_name(:phone_number) %>:</strong></dt>
  <dd><%= @about.phone_number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:toll_free_phone_number) %>:</strong></dt>
  <dd><%= @about.toll_free_phone_number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:fax_number) %>:</strong></dt>
  <dd><%= @about.fax_number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:latitude) %>:</strong></dt>
  <dd><%= @about.latitude %></dd>
  <dt><strong><%= model_class.human_attribute_name(:longitude) %>:</strong></dt>
  <dd><%= @about.longitude %></dd>
  <dt><strong><%= model_class.human_attribute_name(:gmaps) %>:</strong></dt>
  <dd><%= @about.gmaps %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              abouts_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_about_path(@about), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              about_path(@about),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
<%= yield :scripts %>