<%- model_class = Speaker -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<%= link_to t('.new', :default => t("helpers.links.Setup new Speaker")),
            new_speaker_path,
            :class => 'btn btn-primary btn-flat ' %>
<table class="table table-striped">
  <thead>
    <tr>
   

      <th><%= model_class.human_attribute_name(:first_name) %></th>
      <th><%= model_class.human_attribute_name(:last_name) %></th>
      <th><%= model_class.human_attribute_name(:from_church) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
 
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @speakers.each do |speaker| %>
      <tr>
     
        <td><%= speaker.title %></td>
        <td><%= speaker.first_name %></td>
        <td><%= speaker.last_name %></td>
        <td><%= speaker.from_church %></td>
 		<td><%= speaker.title %></td>
        <td>
				     <%= link_to t('.show', :default => t("helpers.links.view")),
			                       speaker_path(speaker) , :class => 'btn   btn-success btn-mini-flat ' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_speaker_path(speaker), :class => 'btn btn-mini-flat' %>
          <%= link_to t('.destroy', :default => t("helpers.links.Remove")),
                      speaker_path(speaker),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini-flat btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


