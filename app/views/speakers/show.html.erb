<%- model_class = Speaker -%>
<div class="page-header">
  <h2><%= @speaker.full_name %></h2>
</div>
<div class="row-fluid   span6">
   <div class="span4 ">
	<div class="form-actions">
	<p><h5>Picture:</h5></p>
	<dl class="dl-horizontal form-actions">
	<%= render :partial => 'picture' %>


    </dl>
	</div>
<br>
<br>
<br>
<%= link_to t('.back', :default => t("helpers.links.View All Speakers")),
            speakers_path, :class => 'btn btn-flat btn-info'  %>
	</div>
	
	<div class="span6 form-actions">

<p><h5>Information:</h5></p>
<dl class="dl-horizontal form-actions">
 
  <% unless @speaker.title.blank? %>
  <dt><strong>Speakers Title:</strong></dt>
  <dd><%= @speaker.title %></dd>
  <%end%>  
  <dt><strong><%= model_class.human_attribute_name(:first_name) %>:</strong></dt>
  <dd><%= @speaker.first_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:last_name) %>:</strong></dt>
  <dd><%= @speaker.last_name %></dd>
 
  <% unless @speaker.from_church.blank? %>
  <dt><strong>Speakers Church:</strong></dt>
  <dd><%= @speaker.from_church %></dd>
  <%end%>  
  
  <% unless @speaker.from_church_url.blank? %>
  <dt><strong>Speakers Church URL:</strong></dt>
  <dd><%= @speaker.from_church_url%></dd>
  <%end%>  
  
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @speaker.description %></dd>
</dl>
 


<div class="form-actions">

  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_speaker_path(@speaker), :class => 'btn btn-flat btn-info' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              speaker_path(@speaker),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger btn-flat' %>
</div>

</div>

 
