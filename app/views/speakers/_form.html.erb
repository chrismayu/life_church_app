<%= simple_form_for @speaker, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :title %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :from_church %>
  <%= f.input :description %>
  <%= f.input :church_staff_id %>
  <%= f.input :from_church_url %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                speakers_path, :class => 'btn' %>
  </div>
<% end %>
