<%= simple_form_for @speaker, :html => { :class => 'form-horizontal' } do |f| %>

  <%= f.input :first_name, :label=>"First:", :placeholder=>' Speakers First Name', :input_html => { :class => "enroll_input span4"}   %>
  <%= f.input :last_name, :label=>"Last Name:", :placeholder=>'Speakers Last Name', :input_html => { :class => "enroll_input span4"}   %>

 <%= f.input :title, :label=>"Speakers Title:", :placeholder=>'Speakers Title', :input_html => { :class => "enroll_input span4"}  %>

  <%= f.input :from_church , :label=>"Home Church:", :placeholder=>'Speakers Church', :input_html => { :class => "enroll_input span4"} %>
 
<%= f.input :description , :label=>'Description :',  :placeholder=>"Add a Short Description about the Speaker" , :hint=> "140 Characters max", :input_html => { :class => "enroll_input span4", :rows => 3} %> 


   <%= f.input :from_church_url , :label=>"Speakers Church URL:", :placeholder=>'Speakers Church URL', :input_html => { :class => "enroll_input span4"} %>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary btn-flat' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                speakers_path, :class => 'btn btn-flat' %>
  </div>
<% end %>
