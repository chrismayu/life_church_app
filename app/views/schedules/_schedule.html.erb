<% if user_signed_in? %>

  <% if can? :edit, :schedules %>
 
<li class="span2">  
		         <div class="thumbnail center"> 
		           	<%= display_schedule_picture(schedule)%>
					 <div class="caption">  
		             	<h5><%= schedule_name(schedule) %></h5>  
					
			            <%= link_to t('.edit', :default => t("helpers.links.edit")),
			                        edit_schedule_path(schedule), :class => 'btn btn-mini-flat' %>
			            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
			                        schedule_path(schedule),
			                        :method => :delete,
			                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
			                        :class => 'btn btn-mini-flat btn-danger' %>
	  		
				   </div>  
		         </div>  
</li>
 <% else %> 
 
 <% if schedule.start_month <= DateTime.now.to_date %>
<li class="span2">  
		         <div class="thumbnail center"> 
							<%= display_schedule_picture(schedule)%>
		           <div class="caption">  
		             	<h5><%= schedule_name(schedule) %> </h5>	 
				   </div>  
		         </div>  
</li>
    <% end %>  

 <% end %>  

  <% else %> 

 <% if schedule.display_start <= DateTime.now.to_date %>
<li class="span2">  
		         <div class="thumbnail center"> 
							<%= display_schedule_picture(schedule)%>
		           <div class="caption">  
		             	<h5><%= schedule_name(schedule) %> </h5>	 
				   </div>  
		         </div>  
</li>
    <% end %>   
    <% end %> 