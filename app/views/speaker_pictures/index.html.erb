<%- model_class = SpeakerPicture -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:speaker_image) %></th>
      <th><%= model_class.human_attribute_name(:speaker_id) %></th>
      <th><%= model_class.human_attribute_name(:image_processed) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @speaker_pictures.each do |speaker_picture| %>
      <tr>
        <td><%= link_to speaker_picture.id, speaker_picture_path(speaker_picture) %></td>
        <td><%= speaker_picture.speaker_image %></td>
        <td><%= speaker_picture.speaker_id %></td>
        <td><%= speaker_picture.image_processed %></td>
        <td><%=l speaker_picture.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_speaker_picture_path(speaker_picture), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      speaker_picture_path(speaker_picture),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_speaker_picture_path,
            :class => 'btn btn-primary' %>
