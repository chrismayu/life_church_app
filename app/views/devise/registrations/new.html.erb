 
 <% content_for :title,  "Sign Up" %>

<div class="row "> 
	<div class="span10  mission_bg img-rounded">


 
	<br>
<table width="100%" class="table_zero"> 
 <td style="width:5px; padding: 0 50px; white-space: nowrap;"><span class="main_text">Sign Up</span> </td>
  <td><hr class="round_line_hoz" /></td>
</table>
 <hr class="round_line_hoz2 " /> 
 
 <div class="row ">
	 
  <div class="offset1 span3">  
	 
	  <br>
	  <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-vertical' }) do |f| %>
	    <%= f.error_notification %>
	    <%= display_base_errors resource %>
	    <%= f.input :name, :autofocus => true %>
	    <%= f.input :email, :required => true %>
	    <%= f.input :password, :required => true %>
	    <%= f.input :password_confirmation, :required => true %>
	 
		 <%= f.input :yes_receive_email %>
		 
	    <%= f.button :submit, 'Create Your Account', :class => 'btn btn-primary btn-flat' %>
	  <% end %>
	 
 
	  <br>
  
</div>

  <div class="span6">  
	  <br>
	    <br>
	  <p class="sign_up_text site_blue"> Here is what is going to happen</p>
      <p class="span5 sign_up_small_text">After signing up, We will send a email to the administration and after they review your request, to make sure you are a human and not a robot ;) <br>They will approve your application, you will get a email informing you of the approval and you will have access to the site</p>
	  
	 
  
</div>




</div>








</div> <!-- Span-->

<div class="span1">
 <%= render :partial => 'abouts/side_buttons'%>
 
</div>
</div> <!-- Row-->
</div> 
 