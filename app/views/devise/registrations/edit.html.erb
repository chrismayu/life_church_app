 
 
 
 <% content_for :title,  "Your Account" %>

<div class="row "> 
	<div class="span10  mission_bg img-rounded">


 
	<br>
<table width="100%" class="table_zero"> 
 <td style="width:5px; padding: 0 50px; white-space: nowrap;"><span class="main_text">Your Account</span> </td>
  <td><hr class="round_line_hoz" /></td>
</table>
 <hr class="round_line_hoz2 " /> 
 
 <div class="row ">
	 
  <div class="offset1 span4">  
	 
	  <br>
	 
	  <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => 'form-vertical' }) do |f| %>
	    <%= f.error_notification %>
	    <%= display_base_errors resource %>
	    <%= f.input :name, :autofocus => true %>
	    <%= f.input :email, :required => true %>
	    <%= f.input :password, :autocomplete => "off", :hint => "leave it blank if you don't want to change it", :required => false %>
	    <%= f.input :password_confirmation, :required => false %>
	    <%= f.input :current_password, :hint => "we need your current password to confirm your changes", :required => true %>
		
    	  <%= f.input :address, :label=>'Address:', :placeholder=>"Address"   %>
    	  <%= f.input :city, :label=>'City:', :placeholder=>"City"   %>
     
  
			
			
			<%= f.input :country_id, collection: Country.order(:name), label_method: :name, value_method: :id,label: "Country:", include_blank: true  %>
			
			
		 
		  <div class="field">
		    <%= f.label :state_id, "State or Province:" %> 
		    <%= f.grouped_collection_select :state_id, Country.order(:name), :states, :name, :id, :name, include_blank: true %>
		  </div>
	

	   
	
   <%= f.input :postal_code, :label=>'Zip Code:', :placeholder=>"Zip/Postal Code"%> 
 
	
      <%= f.input :birthday, as: :date, :label=>"Birthday:",  start_year: Date.today.year - 90, 
          end_year: Date.today.year - 2, order: [ :month,:day, :year], :input_html => { :class => "enroll_input span2"}   %>
	
 
    <%= f.input :gender, :label=>'Gender?',  :collection=>[ ['Male', 'Male' ], ['Female', 'Female'] ], as: :radio_buttons %>


    <br>
    	  <%= f.input :home_phone, :label=>'Home Phone:', :hint => 'Ex: 529-555-4923', :placeholder=>"Home Phone"  %>
  	  <br>
		 <%= f.input :yes_receive_email, :label=>"Receive Email Updates" %>  
	    <%= f.button :submit, 'Update', :class => 'btn btn-primary btn-flat' %>
	  <% end %>
	  <br>
	  <br>
	 
 
	  <br>
  
</div>

  <div class="span5">  
	  <br>
	    <br>
	 
	  <h3>Cancel my account</h3>
	  <h4>Unhappy?</h4>
	  <p class=" sign_up_small_text">Please don't - but if you have too :<br>
		  <br><%= link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'btn btn-danger btn-flat'  %></p>
	  
		 <p class="span4 pull-left sign_up_small_text smaller_text"> ** Cannot be undone - you will have to register again, if you wish to have your access back</p>
</div>




</div>








</div> <!-- Span-->

<div class="span1">
 <%= render :partial => 'abouts/side_buttons'%>
 
</div>
</div> <!-- Row-->
</div> 
 