		    <%= text_field_tag :search, params[:search], :placeholder =>"e.g. Speaker, Date, Topic"  %>
			
		    <%= submit_tag "Search", :class => 'btn-primary btn-flat', :descripion => nil %>
 
		<% end %>
 
		<br>
		<br>
	</div>
 
		 <% @sermons.each do |sermon| %>
 
		 <% if user_signed_in? %>

			   <% if can? :edit, :sermons %>
           
				    <%= render sermon %>
			 
			  <% else %> 
 
			    <%= sort_by_date(sermon).html_safe %>
	 
			   <% end %>  
 
		   <% else %> 

		    <%= sort_by_date(sermon).html_safe %>
			  
		   <% end %> 
 
	     <% end%>
 
		 <%= will_paginate @sermons %>
	 
	</ul>

</div>


</div>
</div>  

