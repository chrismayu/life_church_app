<%- model_class = Sermon -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:date_of_sermon) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:category) %></th>
      <th><%= model_class.human_attribute_name(:audio_url) %></th>
      <th><%= model_class.human_attribute_name(:video_url) %></th>
      <th><%= model_class.human_attribute_name(:display_until) %></th>
      <th><%= model_class.human_attribute_name(:speaker_id) %></th>
      <th><%= model_class.human_attribute_name(:members_only) %></th>
      <th><%= model_class.human_attribute_name(:url) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @sermons.each do |sermon| %>
      <tr>
        <td><%= link_to sermon.id, sermon_path(sermon) %></td>
        <td><%= sermon.date_of_sermon %></td>
        <td><%= sermon.title %></td>
        <td><%= sermon.description %></td>
        <td><%= sermon.category %></td>
        <td><%= sermon.audio_url %></td>
        <td><%= sermon.video_url %></td>
        <td><%= sermon.display_until %></td>
        <td><%= sermon.speaker_id %></td>
        <td><%= sermon.members_only %></td>
        <td><%= sermon.url %></td>
        <td><%=l sermon.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_sermon_path(sermon), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      sermon_path(sermon),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_sermon_path,
            :class => 'btn btn-primary' %>
