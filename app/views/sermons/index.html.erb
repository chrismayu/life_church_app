 <% provide(:title, "Sermons" ) %>

<div class="Row">
	<div class="span10 mission_bg img-rounded ">


<div class="mission_bg img-rounded ">
	<br>
<table width="100%" class="table_zero"> 
 <td style="width:5px; padding: 0 50px; white-space: nowrap;"><span class="main_text">Sermons & Audio</span> </td>
  <td><hr class="round_line_hoz" /></td>
</table>
 <hr class="round_line_hoz2 " /> 
 
 <br>
 
	<% if user_signed_in? %>
	<% if can? :edit, :bulletins %>
	&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= link_to t('.new', :default => t("helpers.links.Setup new Sermon")),
	            new_sermon_path,
	            :class => 'btn btn-primary btn-mini-flat' %> <%= link_to t('.show', :default => t("helpers.links.Setup Speakers")),
			                      speakers_path, :class => 'btn btn-primary btn-mini-flat' %>
			<% end%>
			<% end%>
			<br>
	 
				
